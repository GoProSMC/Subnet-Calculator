<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서브넷 계산기"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />

    <!-- IP 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/etOctet1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="192"
            android:background="@drawable/edit_text_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:paddingHorizontal="8dp" />

        <EditText
            android:id="@+id/etOctet2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="168"
            android:background="@drawable/edit_text_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:paddingHorizontal="8dp" />

        <EditText
            android:id="@+id/etOctet3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="1"
            android:background="@drawable/edit_text_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:paddingHorizontal="8dp" />

        <EditText
            android:id="@+id/etOctet4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="0"
            android:background="@drawable/edit_text_bg" />

    </LinearLayout>

    <!-- CIDR -->
    <Spinner
        android:id="@+id/spinnerCIDR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_bg"
        android:layout_marginBottom="20dp" />

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="초기화"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopy"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="복사"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:textSize="14sp"
        android:layout_marginBottom="10dp" />

    <!-- 결과 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/result_bg">

            <TextView
                android:id="@+id/tvIpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvSubnetMask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvCIDR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="10dp" />

            <TextView
                android:id="@+id/tvNetworkAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvBroadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvFirstHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvLastHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="10dp" />

            <TextView
                android:id="@+id/tvTotalHosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvUsableHosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvWildcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="10dp" />

            <TextView
                android:id="@+id/tvBinary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingVertical="6dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
